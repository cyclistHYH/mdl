/* pages/comment/comment.wxss */
.commentNav {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  padding: 20rpx 20rpx 0;
}

.commentNavBox {
  float: left;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  border: 2rpx solid #696969;
  color: #686868;
  padding: 0 24rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.commentNavBox.active {
  background-color: #ffe4e4;
  color: #e01212;
  border-color: #e01212;
}

.main {
  width: 100%;
  height: auto;
  overflow-x: hidden;
}

.commentBox {
  display: block;
  width: 100%;
  height: auto;
  padding: 24rpx 20rpx 36rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.commentTop {
  width: 100%;
  height: 70rpx;
  margin-bottom: 18rpx;
}

.commentAvatar {
  float: left;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.commentName {
  float: left;
  font-size: 30rpx;
  line-height: 70rpx;
  color: #999999;
  margin-left: 20rpx;
}

.commentTimeBox {
  width: 100%;
  height: auto;
  padding-left: 90rpx;
  margin-bottom: 16rpx;
}

.commentTime {
  float: left;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999999; 
}

.commentLabel {
  float: left;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999999;
  margin-left: 24rpx;
}

.commentTxt {
  width: 100%;
  padding-left: 90rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #333333;
  margin-bottom: 40rpx;
}


.commentImg {
  width: 100%;
  height: auto;
  padding-left: 90rpx;
  margin-bottom: 20rpx;
}

.commentImg image {
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

.commentImg image:nth-child(3n) {
  margin-right: 0;
}

.noMore {
  width: 100%;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  color: #a5a5a5;
}