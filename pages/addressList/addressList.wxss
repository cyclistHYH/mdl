/* pages/addressList/addressList.wxss */
.container {
  padding-top: 18rpx;
}

.main {
  width: 100%;
  height: auto;
  padding-top: 8rpx;
  padding-left: 20rpx;
  background-color: #fff;
}

.addressList {
  position: relative;
  width: 100%;
  height: auto;
  padding: 0 138rpx 0 78rpx;
}

.addressBox {
  width: 100%;
  height: auto;
  padding-top: 32rpx;
  padding-bottom: 22rpx;
}

.addressTop {
  width: 100%;
  height: 44rpx;
}

.addressName {
  float: left;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #333333;
}

.addressTel {
  float: left;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #7f7e7e;
  margin-left: 16rpx;
}

.addressCon {
  width: 100%;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #333;
}

.isDefault {
  float: left;
  width: 76rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 6rpx;
  color: #d91e2d;
  background-color: #ffe6e6;
  margin-top: 5rpx;
  margin-right: 16rpx;
}

.addressAvatar {
  position: absolute;
  top: 50%;
  left: 0;
  width: 48rpx;
  height: 48rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  color: #fefefe;
  margin-top: -24rpx;
  background-color: #bfbfbf;
  border-radius: 50%;
  z-index: 100;
}

.toModify {
  position: absolute;
  top: 50%;
  right: 20rpx;
  width: 76rpx;
  height: 44rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #aeadad;
  border-left: 2rpx solid #bfbfbf;
  z-index: 100;
  margin-top: -22rpx;
  padding-left: 26rpx;
}

.toAdd {
  width: 100%;
  height: 138rpx;
}

.toAddImg {
  float: left;
  width: 48rpx;
  height: 48rpx;
  margin-top: 45rpx;
}

.toAddTxt {
  float: left;
  font-size: 28rpx;
  line-height: 138rpx;
  margin-left: 28rpx;
  color: #333;
}

.toAddArrow {
  float: right;
  width: 14rpx;
  height: 26rpx;
  margin-right: 20rpx;
  margin-top: 56rpx;
}