.openVip {
  display: block;
  width: 710rpx;
  height: 180rpx;
  margin: 0 auto;
  border-radius: 6rpx;
}

.indexTitle {
  display: block;
  width: 100%;
  height: 68rpx;
}

.commodity {
  width: 100%;
  height: auto;
}

.commodityBox:nth-child(2n-1) {
  float: left;
}

.commodityBox:nth-child(2n) {
  float: right;
}

.commodityBox {
  width: 366rpx;
  height: 470rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
}

.commodityImg {
  display: block;
  width: 366rpx;
  height: 316rpx;
}

.commodityContent {
  width: 100%;
  height: 154rpx;
  padding: 6rpx 40rpx 0;
}

.commodityName {
  width: 100%;
  font-size: 26rpx;
  line-height: 36rpx;
  font-weight: 700;
  height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  color: #383838;
}

.commodityTxt {
  width: 100%;
  font-size: 22rpx;
  line-height: 36rpx;
  height: 36rpx;
  color: #ababab;
   display: -webkit-box;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.priceBox {
  width: 100%;
  height: 36rpx;
  margin-top: 18rpx;
}

.priceCurrent {
  float: left;
  font-size: 26rpx;
  line-height: 36rpx;
  color: #e01212;
  font-weight: 700;
}

.discount {
  float: left;
  font-size: 20rpx;
  line-height: 36rpx;
  color: #e01212;
  margin-left: 8rpx;
}

.priceOriginal {
  float: left;
  font-size: 20rpx;
  line-height: 36rpx;
  color: #ababab;
  text-decoration: line-through;
  margin-left: 8rpx;
}