/**index.wxss**/
.swiper-container {
  position: relative;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}

.swiper-box {
  width: 100%;
  height: 100%;
}

.slide-img {
  width: 100%;
  height: 100%;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 18rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 7rpx;
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 50%;
  transition: all .3s;
}

.dots .dot.active {
  width: 28rpx;
  border-radius: 4rpx;
}

.main {
  position: relative;
  width: 100%;
  height: auto;
  z-index: 100;
  padding-top: 18rpx;
}

