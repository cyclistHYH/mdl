/* pages/productDetails/productDetails.wxss */
@import "../../wxParse/wxParse.wxss";


page {
  height: 100%;
  overflow-y: hidden;
}

.container {
  /* padding-bottom: 80rpx; */
  height: 100%;
}

.unSlide {
  height: 100vh;
  overflow-y: auto;
}

.swiperContainer {
  width: 100%;
  height: 626rpx;
}

.swiperBox {
  width: 100%;
  height: 100%;
}

.slideImg {
  display: block;
  width: 100%;
  height: 100%;
}

.swiperBox .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: inherit;
  border: 2rpx solid #e01212;
}

.swiperBox .wx-swiper-dot-active {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #e01212;
  border: none;
}

.productInfo {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-bottom: 18rpx;
  padding: 2rpx 0;
}

.productTs {
  display: block;
  width: 318rpx;
  height: 42rpx;
  margin-top: 46rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}

.productName {
  display: inline-block;
  width: 100%;
  font-size: 30rpx;
  line-height: 36rpx;
  color: #1f1f20;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.productPriceBox {
  width: 100%;
  height: 56rpx;
  margin-bottom: 22rpx;
  padding-left: 20rpx;
}

.productPrice {
  float: left;
  height: 56rpx;
  font-size: 48rpx;
  line-height: 56rpx;
  color: #e01212;
  overflow-y: hidden;
}

.toShare {
  float: right;
  width: 132rpx;
  height: 56rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #898989;
  border-radius: 28rpx 0 0 28rpx;
  background-color: #eeeeee;
  border: none !important;
  padding: 0;
}

.toShare::after {
  border: none;
}

.shareImg {
  float: left;
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
  margin-top: 16rpx;
}

.productPrompt {
  width: 100%;
  height: 40rpx;
  margin-bottom: 32rpx;
  padding: 0 20rpx;
}

.productPrompt text {
  float: left;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #b0b0b0;
}

.productPromptTxt {
  float: left;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #b0b0b0;
}

.productPrompt image {
  float: left;
  width: 20rpx;
  height: 24rpx;
  margin: 10rpx 6rpx;
}

.productPostage {
  float: left;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #b0b0b0;
  margin-left: 80rpx;
}

.chooseLabel {
  width: 100%;
  height: 156rpx;
  padding-top: 10rpx;
  margin-bottom: 4rpx;
}

.chooseLabelTop {
  width: 100%;
  height: 62rpx;
  margin-bottom: 20rpx;
}

.chooseLabelTxt {
  float: left;
  font-size: 22rpx;
  line-height: 62rpx;
  color: #7f7e7e;
}

.chooseLabelCon {
  float: left;
  font-size: 22rpx;
  line-height: 62rpx;
  color: #454444;
  margin-left: 20rpx;
  width: 560rpx;
  height: 62rpx;
  display: -webkit-box;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.chooseLabelArrow {
  float: right;
  width: 12rpx;
  height: 22rpx;
  margin-top: 20rpx;
}

.chooseLabelList {
  width: 100%;
  height: 50rpx;
  padding-left: 60rpx;
  overflow: hidden;
}

.chooseLabelBox {
  float: left;
  width: 116rpx;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 50rpx;
  text-align: center;
  color: #b8b8b8;
  margin-right: 18rpx;
  background-color: #eeeeee;
  border-radius: 6rpx;
}

.parameter {
  width: 100%;
  height: 62rpx;
  margin-bottom: 10rpx;
}

.parameterName {
  float: left;
  font-size: 22rpx;
  line-height: 62rpx;
  color: #7f7e7e;
}

.parameterTxt {
  float: left;
  font-size: 22rpx;
  line-height: 62rpx;
  color: #454444;
  margin-left: 20rpx;
}

.parameterArrow {
  float: right;
  width: 12rpx;
  height: 22rpx;
  margin-top: 20rpx;
}

.serviceBox {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
  padding: 0 20rpx;
}

.serviceBox text {
  float: left;
  font-size: 22rpx;
  line-height: 80rpx;
}

.serviceName {
  color: #7f7e7e;
}

.serviceTxtBox {
  float: left;
  font-size: 22rpx;
  line-height: 80rpx;
  color: #454444;
  margin-left: 20rpx;
}

.serviceArrow {
  float: right;
  width: 12rpx;
  height: 22rpx;
  margin-top: 29rpx;
}

.servicePoint {
  float: left;
  width: 4rpx;
  height: 4rpx;
  background-color: #303030;
  border-radius: 50%;
  margin: 38rpx 8rpx;
}

.servicePoint:last-child {
  display: none;
}

.evaluation {
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 0 20rpx 12rpx;
  margin-bottom: 36rpx;
}

.evaluationTop {
  width: 100%;
  height: 82rpx;
  margin-bottom: 10rpx;
}

.evaluationTop text {
  float: left;
  font-size: 22rpx;
  line-height: 82rpx;
  color: #7f7e7e;
}

.evaluationArrow {
  float: right;
  width: 12rpx;
  height: 22rpx;
  margin-top: 30rpx;
}

.evaluationTopTxt {
  float: right;
  font-size: 22rpx;
  line-height: 82rpx;
  color: #fe7226;
  margin-right: 8rpx;
}

.evaluationInfo {
  width: 100%;
  height: 70rpx;
  margin-bottom: 18rpx;
}

.evaluationAvatar {
  float: left;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.evaluationNickname {
  float: left;
  font-size: 30rpx;
  line-height: 70rpx;
  color: #999999;
  margin-left: 24rpx;
}

.evaluationCon {
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.productTitle {
  display: block;
  width: 346rpx;
  height: 34rpx;
  margin: 0 auto 48rpx;
}

.productDetails {
  width: 100%;
  height: auto;
  overflow-x: hidden;
}

.noMore {
  width: 100%;
  height: 88rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  text-align: center;
  color: #a5a5a5;
}

.productBottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  z-index: 1000;
}

.productBottom button {
  float: left;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: inherit;
}

.addCart {
  background-color: #ff6602;
}

.buyNow {
  background-color: #e01212;
}

.customerService {
  position: fixed;
  bottom: 360rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  border-radius: 50%;
  z-index: 1000;
}

.customerService image {
  display: block;
  width: 100%;
  height: 100%;
}

.goTop {
  position: fixed;
  bottom: 256rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  border-radius: 50%;
  z-index: 1000;
}

.goTop image {
  display: block;
  width: 100%;
  height: 100%;
}

.addSuccessful {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 344rpx;
  height: 154rpx;
  margin-top: -77rpx;
  margin-left: -172rpx;
  background-color: rgba(0, 0, 0, 0.86);
  border-radius: 8rpx;
  z-index: 2000;
  padding-top: 34rpx;
}

.addSuccessfulImg {
  display: block;
  width: 48rpx;
  height: 32rpx;
  margin: 0 auto;
}

.addSuccessfulTxt {
  display: block;
  width: 100%;
  font-size: 22rpx;
  line-height: 82rpx;
  color: #fff;
  text-align: center;
}

.buyAgain {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  z-index: 1000;
  background-color: #e01212;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 0;
}

.popUpBK {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.76);
  z-index: 2000;
}

.popUp {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 886rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 8rpx 8rpx 0 0;
  z-index: 2100;
  padding: 0 16rpx;
}

.toClose {
  position: absolute;
  right: 40rpx;
  top: 32rpx;
  width: 36rpx;
  height: 36rpx;
}

.popUpInfo {
  width: 100%;
  height: 286rpx;
  padding: 60rpx 24rpx 0;
  border-bottom: 2rpx solid #efefef;
}

.popUpImg {
  float: left;
  width: 172rpx;
  height: 172rpx;
  border-radius: 8rpx;
}

.popUpInfoRight {
  float: left;
  width: 480rpx;
  height: 100%;
  padding-top: 88rpx;
  padding-left: 40rpx;
}

.popUpPrice {
  display: block;
  width: 100%;
  font-size: 30rpx;
  line-height: 58rpx;
  color: #e01212;
}

.popUpLabel {
  display: block;
  width: 100%;
  font-size: 22rpx;
  line-height: 26rpx;
  color: #454444;
}

.popUpScroll {
  width: 100%;
  height: 520rpx;
  padding-top: 28rpx;
  overflow-x: hidden;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

.labelWrap {
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #efefef;
}

.labelTitle {
  width: 100%;
  font-size: 22rpx;
  line-height: 50rpx;
  color: #454444;
  margin-bottom: 26rpx;
}

.labelBox {
  width: 100%;
  height: auto;
  padding-bottom: 30rpx;
}

.labelItem {
  float: left;
  min-width: 116rpx;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 48rpx;
  text-align: center;
  padding: 0 10rpx;
  border: 1rpx solid #eeeeee;
  background-color: #eeeeee;
  color: #b8b8b8;
  border-radius: 6rpx;
  margin-right: 18rpx;
  margin-bottom: 20rpx;
}

.labelItem.active {
  border-color: #d91e2d;
  color: #d91e2d;
  background-color: #fff4f5;
}

.numberBox {
  width: 100%;
  height: 188rpx;
  border-bottom: 2rpx solid #efefef;
  padding: 44rpx 24rpx;
  margin-bottom: 12rpx;
}

.numberTxt {
  float: left;
  font-size: 22rpx;
  line-height: 26rpx;
  color: #2a2623;
}

.numberPlus, .numberShow, .numberLess {
  float: right;
  width: 72rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  background-color: #f2f2f2;
  color: #929292;
  margin-left: 4rpx;
}

.numberPlus, .numberLess {
  font-size: 40rpx;
}

.confirmBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
  z-index: 2100;
  border-radius: 0;
}

.popUpName {
  width: 100;
  height: 108rpx;
  font-size: 28rpx;
  line-height: 108rpx;
  text-align: center;
  color: #454444;
}

.popUpCon {
  width: 100%;
  height: 698rpx;
  overflow-x: hidden;
  overflow-y: auto;
}

.parameterImg {
  width: 100%;
  height: 100%;
}

.complete {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  background-color: #d91e2d;
  color: #fff;
  border-radius: 0;
  z-index: 2100;
}