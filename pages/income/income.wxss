.withdraw {
  position: fixed;
  top: 50%;
  left: 40rpx;
  width: 670rpx;
  height: 474rpx;
  background-color: #fff;
  border-radius: 8rpx;
  z-index: 1000;
  margin-top: -237rpx;
}

.withdrawTop {
  position: relative;
  width: 100%;
  height: 158rpx;
}

.withdrawBk {
  display: block;
  width: 100%;
  height: 100%;
}

.withdrawTopCon {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 36rpx;
  line-height: 158rpx;
  text-align: center;
  color: #fff;
}

.withdrawCon {
  width: 100%;
  height: 316rpx;
  padding: 0 20rpx;
}

.withdrawBox {
  width: 100%;
  height: 156rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.withdrawImg {
  float: left;
  width: 50rpx;
  height: 46rpx;
  margin-top: 55rpx;
}

.withdrawBox text {
  float: left;
  font-size: 30rpx;
  line-height: 156rpx;
  color: #000;
  margin-left: 20rpx;
}

.withdrawArrow {
  float: right;
  width: 14rpx;
  height: 24rpx;
  margin-top: 66rpx;
}