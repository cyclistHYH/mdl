/* pages/income/addCard/addCard.wxss */
.container {
  padding-top: 18rpx;
}

.addCardBox {
  width: 100%;
  height: 102rpx;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.addCardBox:last-child {
  border-color: #fff;
}

.addCardTxt {
  float: left;
  width: 200rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #2b2b2b;
}

.addCardInp {
  float: left;
  width: 480rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #333;
  padding-left: 10rpx;
}

.addCardInpP {
  font-size: 28rpx;
  line-height: 100rpx;
  color: #999;
}

.chooseBox {
  position: relative;
  float: left;
  width: 508rpx;
  height: 100%;
}



.color {
  color: #999999;
}

.chooseImg {
  position: absolute;
  top: 38rpx;
  right: 0;
  width: 14rpx;
  height: 24rpx;
  z-index: 100;
}

.confirmBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
  border-radius: 0;
  z-index: 1000;
}