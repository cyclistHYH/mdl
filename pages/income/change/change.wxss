/* pages/income/change/change.wxss */
.container {
  min-height: 100vh;
  background-color: #fff;
}

.changeTop {
  width: 100%;
  height: 136rpx;
  background-color: #f1f0f2;
  padding-top: 18rpx;
}

.changeTopBox {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.changeTopTxt {
  float: left;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #000;
}

.changeTopImg {
  float: right;
  width: 44rpx;
  height: 36rpx;
  margin-top: 32rpx;
}

.changeTopTit {
  float: right;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #9c9c9c;
  margin-right: 20rpx;
}

.changeContent {
  width: 100%;
  height: 336rpx;
  padding: 46rpx 20rpx 0;
}

.changeTitle {
  width: 100%;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #333;
}

.inputBox {
  width: 100%;
  height: 132rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.inputBoxTxt {
  float: left;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #333;
  padding-top: 52rpx;
}

.numberInp {
  float: left;
  width: 600rpx;
  height: 100%;
  font-size: 72rpx;
  line-height: 110rpx;
  color: #333;
  padding-left: 12rpx;
}

.changeBalance {
  width: 100%;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #999999;
  margin-top: 30rpx;
  margin-bottom: 32rpx;
}

.changeBalance view {
  display: inline-block;
  color: #d91e2d;
}

.withdrawBtn {
  width: 710rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
  background-color: #d91e2d;
  border-radius: 4rpx;
}

.popUpBk {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.successPopUp {
  position: fixed;
  width: 670rpx;
  height: 596rpx;
  top: 50%;
  left: 40rpx;
  margin-top: -298rpx;
  z-index: 1000;
}

.successBk {
  display: block;
  width: 100%;
  height: 100%;
}

.successTxt {
  position: absolute;
  left: 0;
  top: 360rpx;
  width: 100%;
  height: 48rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  text-align: center;
  color: #1f1f20;
}

.closePopUp {
  position: absolute;
  left: 170rpx;
  bottom: 64rpx;
  width: 330rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
  border-radius: 4rpx;
}