/* pages/income/cardList/cardList.wxss */
.container {
  min-height: 100vh;
  background-color: #fff;
  padding: 20rpx 20rpx 206rpx;
}

.cardList {
  width: 100%;
  height: auto;
}

.bankCardTop {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(to right,#4b4b4b,#1e1d1d);
  box-shadow: 0 8rpx 8rpx rgba(0,0,0,0.36);
  border-radius: 4rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.bankCardTopImg {
  float: left;
  width: 48rpx;
  height: 48rpx;
  margin-left: 28rpx;
  margin-top: 66rpx;
}

.bankCardTopTxt {
  float: right;
  font-size: 24rpx;
  line-height: 180rpx;
  margin-right: 44rpx;
  color: #fff;
}

.bankCardTopCon {
  float: left;
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-left: 42rpx;
  padding-top: 38rpx;
}

.bankName {
  font-size: 30rpx;
  line-height: 58rpx;
  color: #fff;
}

.bankNumber {
  font-size: 24rpx;
  line-height: 52rpx;
  color: #fff;
}

.cardChoose {
  float: right;
  width: 42rpx;
  height: 42rpx;
  margin-right: 34rpx;
  margin-top: 69rpx;
}

.cardChoose .wx-radio-input {
  box-sizing: border-box;
  background-color: inherit;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.cardChoose .wx-radio-input.wx-radio-input-checked::before {
  width: 62rpx;
  height: 62rpx;
  border: none;
  line-height: 62rpx;
  text-align: center;
  font-size: 46rpx;
  color: #d81e06;
  background-color: #fff;
  border-radius: 50%;
  margin-top: -2rpx;
}

.deleteBtn {
  position: fixed;
  bottom: 126rpx;
  left: 20rpx;
  width: 710rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 76rpx;
  border: 2rpx solid #d91e2d;
  border-radius: 4rpx;
  color: #d91e2d;
  background-color: #fff;
}

.confirmBtn {
  position: fixed;
  bottom: 26rpx;
  left: 20rpx;
  width: 710rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
  border-radius: 4rpx;
}