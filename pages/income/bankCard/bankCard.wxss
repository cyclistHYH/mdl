/* pages/income/bankCard/bankCard.wxss */
.container {
  min-height: 100vh;
  background-color: #fff;
  padding: 18rpx 20rpx;
}

.bankCardTop {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(to right,#4b4b4b,#1e1d1d);
  box-shadow: 0 8rpx 8rpx rgba(0,0,0,0.36);
  border-radius: 4rpx;
  box-sizing: border-box;
  margin-bottom: 36rpx;
}

.bankCardTopImg {
  float: left;
  width: 48rpx;
  height: 48rpx;
  margin-left: 28rpx;
  margin-top: 66rpx;
}

.bankCardTopTxt {
  float: right;
  font-size: 24rpx;
  line-height: 180rpx;
  margin-right: 44rpx;
  color: #fff;
}

.bankCardTopCon {
  float: left;
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-left: 42rpx;
  padding-top: 38rpx;
}

.bankName {
  font-size: 30rpx;
  line-height: 58rpx;
  color: #fff;
}

.bankNumber {
  font-size: 24rpx;
  line-height: 52rpx;
  color: #fff;
}

.changeContent {
  width: 100%;
  height: 336rpx;
  padding: 46rpx 20rpx 0;
}

.changeTitle {
  width: 100%;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #333;
}

.inputBox {
  width: 100%;
  height: 132rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.inputBoxTxt {
  float: left;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #333;
  padding-top: 52rpx;
}

.numberInp {
  float: left;
  width: 600rpx;
  height: 100%;
  font-size: 72rpx;
  line-height: 110rpx;
  color: #333;
  padding-left: 12rpx;
}

.changeBalance {
  width: 100%;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #999999;
  margin-top: 30rpx;
  margin-bottom: 32rpx;
}

.changeBalance view {
  display: inline-block;
  color: #d91e2d;
}

.withdrawBtn {
  width: 710rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
  background-color: #d91e2d;
  border-radius: 4rpx;
}

.popUpBk {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.successPopUp {
  position: fixed;
  width: 670rpx;
  height: 596rpx;
  top: 50%;
  left: 40rpx;
  margin-top: -298rpx;
  z-index: 1000;
}

.successBk {
  display: block;
  width: 100%;
  height: 100%;
}

.successTxt {
  position: absolute;
  left: 0;
  top: 360rpx;
  width: 100%;
  height: 48rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  text-align: center;
  color: #1f1f20;
}

.closePopUp {
  position: absolute;
  left: 170rpx;
  bottom: 64rpx;
  width: 330rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
  border-radius: 4rpx;
}