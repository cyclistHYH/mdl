/* pages/buySuccess/buySuccess.wxss */
.container {
  min-height: 100vh;
  background-color: #fff;
}

.buySuccessBk {
  display: block;
  width: 100%;
  height: 442rpx;
}

.successTxt {
  width: 100%;
  font-size: 30rpx;
  line-height: 48rpx;
  text-align: center;
  color: #1f1f20;
  padding: 0 20rpx;
}

.successTxt text {
  font-weight: bold;
}

.btnBox {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  margin-top: 78rpx;
}

.btnBox navigator {
  width: 330rpx;
  height: 80rpx;
  font-size: 30rpx;
  border-radius: 4rpx;
  text-align: center;
  box-sizing: border-box;
}

.checkOrder {
  float: left;
  line-height: 80rpx;
  color: #fff;
  background-color: #d91e2d;
}

.toBack {
  float: right;
  line-height: 76rpx;
  border: 2rpx solid #bfbfbf;
  color: #8d8d8d;
}