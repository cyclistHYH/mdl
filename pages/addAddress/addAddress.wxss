/* pages/addAddress/addAddress.wxss */
.container {
  padding-top: 18rpx;
}

.formBox {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.inputBox {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 0 20rpx;
}

.inputTxt {
  float: left;
  width: 160rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 98rpx;
  color: #2b2b2b;
}

.formInp {
  float: left;
  width: 480rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 98rpx;
  color: #333;
  padding-left: 12rpx;
}

.inputPlaceholder {
  font-size: 28rpx;
  line-height: 98rpx;
  color: #aeaeae;
}

.inputBox picker {
  float: left;
  width: 480rpx;
  height: 100%;
}

.picker {
  float: left;
  width: 480rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 98rpx;
  color: #333;
  padding-left: 12rpx;
}

.color {
  color: #aeaeae;
}

.detailedBox {
  width: 100%;
  height: 148rpx;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 0 20rpx;
}

.detailedTxt {
  float: left;
  width: 160rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #2b2b2b;
}

.detailedInp {
  float: left;
  width: 520rpx;
  height: 100%;
  padding-top: 36rpx;
  font-size: 28rpx;
  /* line-height: 48rpx; */
  color: #333;
  box-sizing: border-box;
  padding-left: 12rpx;
}

.detailedPlace {
  font-size: 28rpx;
  color: #aeaeae;
}

.defaultBox {
  width: 100%;
  height: 98rpx;
  padding: 0 20rpx;
}

.defaultTxt {
  float: left;
  font-size: 28rpx;
  line-height: 98rpx;
  color: #2b2b2b;
}

.defaultInp {
  float: right;
  width: 110rpx;
  height: 60rpx;
  margin-top: 19rpx;
}

.addBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  background-color: #d91e2d;
  color: #fff;
  border-radius: 0;
}