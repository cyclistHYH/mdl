/* pages/categories/categories.wxss */

.container {
  /* height: 100%; */
  padding-top: 10rpx;
}

.categoriesNav {
  position: fixed;
  left: 0;
  top: 10rpx;
  /* float: left; */
  width: 208rpx;
  height: 100%;
  z-index: 1000;
}

.categoriesNavList {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.categoriesNavBox {
  width: 100%;
  height: 100rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  font-weight: 700;
  text-align: center;
  border-bottom: 4rpx solid #f1f0f2;
  color: #383838;
  border-left: 4rpx solid #fff;
}

.categoriesNavBox.active {
  border-left: 4rpx solid #e01212;
  color: #e01212;
}

.categoriesMain {
  float: right;
  width: 510rpx;
  height: 100%;
  /* overflow-y: auto; */
  overflow-x: hidden;
  margin-right: 20rpx;
}

.searchBox {
  width: 100%;
  height: 78rpx;
  background-color: #fff;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.magnifier {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 19rpx;
  margin-left: 46rpx;
}

.searchInp {
  float: left;
  box-sizing: border-box;
  width: 424rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 78rpx;
  color: #383838;
  padding: 0 18rpx;
}

.searchInpP {
  font-size: 28rpx;
  line-height: 78rpx;
  color: #ababab;
}

.categoriesBanner {
  display: block;
  width: 100%;
  height: 200rpx;
}

.categoriesShow {
  width: 100%;
  min-height: 810rpx;
  background-color: #fff;
  padding: 40rpx 30rpx 0;
}

.categoriesBox {
  float: left;
  width: 450rpx;
  height: 438rpx;
  /* margin-right: 10rpx; */
  margin-bottom: 20rpx;
}

/* .categoriesBox:nth-child(3n) {
  margin-right: 0;
} */

.categoriesImg {
  display: block;
  width: 450rpx;
  height: 390rpx;
}

.productName {
  width: 100%;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  color: #383838;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}

/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}