.logistics {
  width: 100%;
  height: auto;/*148*/
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}

.logisticsImg {
  float: left;
  width: 52rpx;
  height: 52rpx;
  margin-top: 28rpx;
}

.logisticsInfo {
  float: left;
  width: 620rpx;
